# Auto detect text files and perform LF normalization
* text=auto

# Force LF for all text files
*.c text eol=lf
*.h text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.cc text eol=lf
*.cxx text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.cmake text eol=lf
CMakeLists.txt text eol=lf

# Force CRLF for Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf
*.sln text eol=crlf
*.vcxproj text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.dll binary
*.exe binary
*.lib binary
*.so binary
*.dylib binary
*.a binary